<% provide(:title, 'Sign Up')%>
<h1>Sign Up</h1>
<div class = "row">
    <div class = "col-md-6 col-md-offset-3">
        <%= form_for(@user, url: signup_path) do |f| %>
        <%= render"shared/error_messages"%>
        
        <%= f.label :name%>
        <%= f.text_field :name, class:"form-conrtol" %>
        
        <%= f.label :email%>
        <%= f.text_field :email, class:"form-conrtol" %>
        
        <%= f.label :password%>
        <%= f.password_field :password, class:"form-conrtol" %>
        
        <%= f.label :password_confirmation%>
        <%= f.password_field :password_confirmation, class:"form-conrtol" %>
        
        <%= f.submit "Create my account", class:"btn btn-primary"%>
        <% end%>
    </div>
</div>
